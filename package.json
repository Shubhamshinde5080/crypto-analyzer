    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-testing-library": "^7.5.3",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lint-staged": "^16.1.2",
    "postcss-preset-env": "^10.2.4",
    "prettier": "^3.6.2",
    "puppeteer": "^24.12.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5",
    "typescript-eslint": "^8.36.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
