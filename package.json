    "@upstash/redis": "^1.35.1",
    "autoprefixer": "^10.4.21",
    "axios": "^1.10.0",
    "chrome-aws-lambda": "^10.1.0",
    "date-fns": "^4.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "next": "15.3.5",
    "postcss": "^8.5.6",
    "puppeteer-core": "^10.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.1.0",
    "redis": "^5.6.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
